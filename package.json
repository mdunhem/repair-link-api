{
  "name": "repair-link-api",
  "version": "0.1.0",
  "description": "RepairLink backend API server",
  "repository": {
    "type": "git",
    "url": "https://github.com/mdunhem/repair-link-api.git"
  },
  "author": "Mikael Dunhem",
  "license": "MIT",
  "scripts": {
    "start": "npm run build && npm run migrations && npm run serve",
    "start-watch": "npm run build && npm run migrations-local && npm run watch",
    "build": "npm run build-ts && npm run tslint",
    "migrations": "typeorm migrations:run -c prod",
    "migrations-local": "typeorm migrations:run -c localhost",
    "serve": "node dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"nodemon dist/server.js\"",
    "test": "jest --forceExit",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "jest": {
    "globals": {
      "__TS_CONFIG__": "tsconfig.json"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "@types/async": "^2.0.40",
    "@types/body-parser": "^1.16.2",
    "@types/connect-mongo": "0.0.32",
    "@types/cors": "^2.8.1",
    "@types/errorhandler": "0.0.30",
    "@types/express": "^4.0.35",
    "@types/express-session": "0.0.32",
    "@types/jest": "^19.2.2",
    "@types/mongodb": "^2.1.43",
    "@types/mongoose": "^4.7.9",
    "@types/morgan": "^1.7.32",
    "@types/node": "^7.0.12",
    "@types/supertest": "^2.0.0",
    "async": "^2.1.2",
    "body-parser": "^1.15.2",
    "compression": "^1.6.2",
    "connect-mongo": "^1.3.2",
    "cors": "^2.8.4",
    "errorhandler": "^1.4.3",
    "express": "^4.14.0",
    "express-session": "^1.14.2",
    "mongoose": "^4.6.6",
    "morgan": "^1.7.0",
    "pg": "^6.4.1",
    "reflect-metadata": "^0.1.10",
    "tslint": "^5.0.0",
    "typeorm": "0.1.0-alpha.32",
    "typescript": "^2.2.2"
  },
  "devDependencies": {
    "concurrently": "^3.4.0",
    "jest": "^19.0.2",
    "nodemon": "^1.11.0",
    "supertest": "^2.0.1",
    "ts-jest": "^19.0.8"
  }
}
